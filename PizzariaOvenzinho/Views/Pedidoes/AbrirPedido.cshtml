@model PizzariaOvenzinho.Models.Pedido

@{
    ViewBag.Title = "AbrirPedido";
    Layout = "~/Views/Shared/TemplateCliente.cshtml";
}

<h2 style="color:#fff;text-align:center;font-size:50px;font-family:Brush Script Std, Brush Script MT, cursive;">Digite seus dados de entrega:</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.NomeCliente, htmlAttributes: new { @class = "control-label col-md-2",@style="color:#fff;" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NomeCliente, new { htmlAttributes = new { @class = "form-control", @style = "width:400px;" } })
                @Html.ValidationMessageFor(model => model.NomeCliente, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cep, htmlAttributes: new { @class = "control-label col-md-2", @style = "color:#fff;" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cep, new { htmlAttributes = new { @class = "form-control", @style = "width:400px;" } })
                @Html.ValidationMessageFor(model => model.cep, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EnderecoCliente, htmlAttributes: new { @class = "control-label col-md-2", @style = "color:#fff;" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EnderecoCliente, new { htmlAttributes = new { @class = "form-control" , @style = "width:400px;" } })
                @Html.ValidationMessageFor(model => model.EnderecoCliente, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NumeroCasaCliente, htmlAttributes: new { @class = "control-label col-md-2", @style = "color:#fff;" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NumeroCasaCliente, new { htmlAttributes = new { @class = "form-control", @style = "width:400px;" } })
                @Html.ValidationMessageFor(model => model.NumeroCasaCliente, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TelefoneCliente, htmlAttributes: new { @class = "control-label col-md-2", @style = "color:#fff;" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TelefoneCliente, new { htmlAttributes = new { @class = "form-control", @style = "width:400px;" } })
                @Html.ValidationMessageFor(model => model.TelefoneCliente, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Solicitar pedido" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "HomeCliente", "Principal", null, new { @class = "btn btn-default" })
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
