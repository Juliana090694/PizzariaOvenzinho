@model IEnumerable<PizzariaOvenzinho.Models.Administrador>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/TemplateAdmin.cshtml";
}

<h2 style="color:#fff;text-align:center;font-size:50px;font-family:Brush Script Std, Brush Script MT, cursive;">Listar Admin</h2>

<p>
    @Html.ActionLink("Cadastrar", "Create",null,new { @class="btn btn-default"})
</p>
<table class="table table-striped table-hover" style="background-color:#fff;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Senha)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Login)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Senha)
        </td>
        <td>
          @Html.ActionLink("Editar", "Edit", new { id=item.AdministradorId}, new { @class = "btn btn-primary" }) |

         @Html.ActionLink("Deletar", "Delete", new { id=item.AdministradorId}, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
