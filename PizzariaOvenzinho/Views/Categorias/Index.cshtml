@model IEnumerable<PizzariaOvenzinho.Models.Categoria>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/TemplateAdmin.cshtml";
}

<h2 style="color:#fff;text-align:center;font-size:50px;font-family:Brush Script Std, Brush Script MT, cursive;">Listar Categorias</h2>

<p>
    @Html.ActionLink("Cadastrar", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table table-striped table-hover" style="background-color:#fff;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoriaNome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.CategoriaId },new { @class="btn btn-default" }) |
          
            @Html.ActionLink("Deletar", "Delete", new { id = item.CategoriaId },new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
