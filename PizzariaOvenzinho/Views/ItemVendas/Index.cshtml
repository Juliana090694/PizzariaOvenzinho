@model IEnumerable<PizzariaOvenzinho.Models.Produto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/TemplateCliente.cshtml";
    //ViewBag.ValorTotal = HttpContext.Current.Session["ValorPedido"];
}

<h2 style="color:#fff;text-align:center;font-size:50px;font-family:Brush Script Std, Brush Script MT, cursive;">Carrinho</h2>



<table  class="table table-striped table-hover " style="background-color:#fff;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.categoria.CategoriaNome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th></th>
    </tr>

@if (Model != null && Model.Count() != 0)
{
    foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.categoria.CategoriaNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.ActionLink("Delete", "RemoverProdutoCarrinho", "Produtos", new { id = item.ProdutoId }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td>
            Não há nada no Carrinho :(
        </td>
    </tr>
}

</table>

   <div class="panel panel-success" style="width:200px;">
        <div class="panel-heading">
            <h3 class="panel-title">Valor total</h3>
        </div>
        <div class="panel-body">
            R$ @(ViewBag.ValorTotal)
        </div>
  </div>

<div style="width:100px;">
    @if (Model != null && Model.Count() != 0)
    {
        <div>@Html.ActionLink("Finalizar", "AbrirPedido", "Pedidoes", null, new { @class = "btn btn-success" })</div>
    }
</div>
